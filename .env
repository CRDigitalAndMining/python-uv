# Environment Configuration
# This file contains default values for all configuration options
# For local overrides, create .env.local (not committed to git)

# =============================================================================
# ENVIRONMENT
# =============================================================================

# Set to true for local development, false for production
# Affects logging format (colored console vs JSON), debug mode, etc.
IS_LOCAL=false

# =============================================================================
# APPLICATION
# =============================================================================

# Enable debug mode (verbose logging, detailed error messages)
DEBUG=false

# =============================================================================
# FASTAPI CONFIGURATION (Optional - install with: uv sync --extra fastapi)
# =============================================================================

# Application title displayed in OpenAPI docs
TITLE=FastAPI

# Short summary for OpenAPI docs (optional)
SUMMARY=

# Detailed description for OpenAPI docs
DESCRIPTION=

# Application version
VERSION=0.1.0

# OpenAPI schema URL
OPENAPI_URL=/openapi.json

# Swagger UI documentation URL
DOCS_URL=/docs

# ReDoc documentation URL
REDOC_URL=/redoc

# OpenAPI URL prefix
OPENAPI_PREFIX=

# API version 1 prefix (e.g., /api/v1/users)
API_PREFIX_V1=/api/v1

# Allowed hosts for CORS (JSON array format)
ALLOWED_HOSTS=["*"]

# =============================================================================
# AZURE MONITOR (PRODUCTION LOGGING)
# =============================================================================

# Azure Monitor connection string (required when IS_LOCAL=false)
# Format: InstrumentationKey=<key>;IngestionEndpoint=https://<region>.in.applicationinsights.azure.com/
# AZURE_MONITOR_CONNECTION_STRING=

# =============================================================================
# CUSTOM SETTINGS
# =============================================================================

# Add your custom environment variables below
# Remember to also add them to tools/config/settings.py
